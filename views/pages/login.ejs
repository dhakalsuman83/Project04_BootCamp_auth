<%- include ('../partials/head'); -%> 
<style>
    .input-error{
        border-color: red !important;
    }
    .input-success{
        border-color: green !important;
    }
    .info-error {
        color: red;
    }
</style>
<div>
    <% if(typeof message !== 'undefined'){ %>
        <p style="color : red;"><%= message%></p>
    <%}%>
</div>
<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
      
      <!-- Icon -->
    <div class="fadeIn first">
        <img style = "margin :5px;"src="coffee.gif" id="icon" alt="User Icon" />
    </div>
    <form action="/login" method="POST">
        <div class="form-items">
            <input 
            type="text"
            id="login" 
            class="fadeIn second <%=(typeof(errors) !== 'undefined')  ? (errors.email) ? 'input-error' : 'input-success' : '' %>" 
            name="email" 
            placeholder="login" 
            value="<%= typeof email !== 'undefined' ? email : '' %>"
            >
            
            <%  if((typeof(errors) !== 'undefined')  && (errors.email)) {%>
                <small class="info-error"><%=errors.email%></small>
            <%}%>
        </div>

        <div class="form-items">
            <input 
            type="password" 
            id="password" 
            class="fadeIn third <%=(typeof(errors) !== 'undefined')  ? (errors.password) ? 'input-error' : 'input-success' : '' %>" 
            name="password" 
            placeholder="password" 
            value="<%= typeof password !== 'undefined' ? password : '' %>"
            >
            
            <%  if((typeof(errors) !== 'undefined')  && (errors.password)) {%>
                <small class="info-error"><%=errors.password%></small>
            <%}%>
        </div>

        <input 
        type="submit" 
        class="fadeIn fourth" 
        value="Log In"
        >
    </form>
    <div>
    <a style = "margin-bottom: 10px;" href='/register'>Register</a>
    </div>
</div>
